<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.espacobemestar">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".EMSApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:networkSecurityConfig="@xml/network_security_config" >
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".DebugActivity" />

        <activity android:name=".TelaInicialActivity"
            android:theme="@style/AppTheme.Toolbar"/>

        <activity android:name=".ServicoActivity"
            android:theme="@style/AppTheme.Toolbar"
            android:parentActivityName=".TelaInicialActivity">
        </activity>

        <activity android:name=".CadastroAgendamentoActivity"
            android:theme="@style/AppTheme.Toolbar"
            android:parentActivityName=".TelaInicialActivity">
        </activity>

        <activity android:name=".ServicoDetalheActivity"
            android:theme="@style/AppTheme.Toolbar"
            android:parentActivityName=".TelaInicialActivity">
        </activity>
        <activity android:name=".ProfissionaisActivity"
            android:theme="@style/AppTheme.Toolbar"
            android:parentActivityName=".TelaInicialActivity">
        </activity>
        <activity android:name=".ProfissionaisDetalheActivity"
            android:theme="@style/AppTheme.Toolbar"
            android:parentActivityName=".TelaInicialActivity">
        </activity>
    </application>

</manifest>